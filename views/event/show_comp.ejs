<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        
            <div class="col-md-6 offset-md-3">
                <h1 class="display-4">أضافة شركة</h1>
                <hr>
                
                <%- include('../partials/flashMessages') -%>      
                <% comp.forEach((comp)=> {%>

                <form  action="/events/updateComp" method="post">

                    <div class="form-group">
                    <label for="title">عنوان الوضيفة</label>
                    <input type="text" name="com_name" id="com_name" value="<%=comp.com_name%>" class="form-control">
                    </div>

                        <div class="form-group">
                        <label for="title">رقم الهاتف</label>
                        <input type="text" name="comp_tel" id="comp_tel" value="<%=comp.comp_tel%>" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="title">الموقع</label>
                            <input type="text" name="comp_addres" id="comp_addres" value="<%=comp.comp_addres%>" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="title">نوع الوضيفة</label>
                                <input type="text" name="comp_type" id="comp_type" value="<%=comp.comp_type%>" class="form-control">
                                </div>

                                
                            <label for="location">الحالة</label>
                            <select class="form-control" id="avilability" name="avilability">
                                <option>متوفر</option>
                                <option>غير متوفر</option>
                                </select>
                        
                                <hr>
                        

                            

                                <div class="form-group">
                                    <label for="title">الملاحضات</label>
                                    <input type="text" name="note" id="note" value="<%=comp.note%>" class="form-control">
                                    </div>

               


                                    <input type="hidden" name="comp_id" id="comp_id" value="<%=comp.com_id%>">


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> نعديل</button>
                    </div>
            </form>

            <script>
                document.addEventListener('DOMContentLoaded', (event) => {
                    // Value passed from the server-side
                    var c_avilability = '<%=comp.avilability%>';
        
        //j_avilability
                    // Set the selected value of the <select> element
                    var avilability = document.getElementById('avilability');
                    avilability.value = c_avilability
                });
            </script>
            <%})%>

        </div>

        

    </div>
    
    
</div>

    
<%- include('../partials/footer') -%>