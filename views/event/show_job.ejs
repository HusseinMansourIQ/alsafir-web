<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        
            <div class="col-md-6 offset-md-3">
                <h1 class="display-4">أضافة وضيفة</h1>
                <hr>
                
                <%- include('../partials/flashMessages') -%> 
                <% job.forEach((job)=> {%>
                <form  action="/events/updateJob" method="post">
                    <div class="form-group">
                    <label for="title">عنوان الوضيفة</label>
                    <input type="text" name="j_name" id="j_name" value="<%=job.jop_name%>" class="form-control">
                </div>

                <div class="form-group">
                    <label for="title">رقم الهاتف</label>
                    <input type="text" name="j_tel" id="j_tel" value="<%=job.jop_tele%>"class="form-control">
                </div>

                    <div class="form-group">
                            <label for="location">العنوان</label>
                            <input type="text" name="j_address" id="j_address" value="<%=job.jop_addres%>" class="form-control">
                        </div>

                       
                            
                        <label for="location">الحالة</label>
                        <select class="form-control" id="j_avilability" name="j_avilability" value="<%=job.avilability%>">
                            <option>متوفر</option>
                            <option>غير متوفر</option>
                            </select>
                            <hr>
              
                <div class="row">

                    <div class="form-group col-md-6">
                        <label for="location">وقت بدأ الدوام</label>
                        <input type="text" name="j_start_time" id="j_start_time" value="<%=job.jop_start_time%>" class="form-control">
                    </div>
                    
                    <div class="form-group col-md-6">
                        <label for="location">وقت انتهاء الدوام</label>
                        <input type="text" name="j_end_time" id="j_end_time" value="<%=job.jop_end_time%>" class="form-control">
                    </div>
                    
                </div>
               
                <div class="form-group">
                    <label for="location">اسم صاحب العمل</label>
                    <input type="text" name="j_owner" id="j_owner" value="<%=job.jop_oner%>" class="form-control">
                </div>

                <div class="row">

                    <div class="col-md-6 ">
                        <label for="location">نوع الراتب</label>
                        <select class="form-control" id="jop_salary_type" name="jop_salary_type" value="<%=job.jop_salary_type%>">
                            <option>شهري</option>
                            <option>اسبوعي</option>
                            <option>يومي</option>
                           
                          </select>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="location">مقدار الراتب</label>
                            <input type="text" name="j_salary" id="j_salary" value="<%=job.jop_sallry%>" class="form-control">
                        </div>
                    </div>
                </div>

               
                <div class="form-group">
                    <label for="location">شروط العمل</label>
                    <input type="text area" name="j_notes" id="j_notes" value="<%=job.jop_note%>" class="form-control">
                </div>


                <input type="hidden" name="j_id" id="j_id" value="<%=job.jop_id%>">


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> تعديل</button>
                    </div>
            </form>
        </div>

  <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            // Value passed from the server-side
            var salary_type = '<%=job.jop_salary_type %>';
            var j_avilability = '<%=job.avilability %>';

//j_avilability
            // Set the selected value of the <select> element
            var jop_salary_type = document.getElementById('jop_salary_type');
            var avilability = document.getElementById('j_avilability');
            jop_salary_type.value = salary_type;
            avilability.value = j_avilability
        });
    </script>
        <%})%>


    </div>
    
    
</div>

    
<%- include('../partials/footer') -%>