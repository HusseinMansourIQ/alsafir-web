<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        
            <div class="col-md-6 offset-md-3">
                <h1 class="display-4">أضافة وضيفة</h1>
                <hr>
                
                <%- include('../partials/flashMessages') -%>      
                <form  action="/events/addJob" method="post">
                    <div class="form-group">
                    <label for="title">عنوان الوضيفة</label>
                    <input type="text" name="j_name" id="j_name" class="form-control">
                </div>

                <div class="form-group">
                    <label for="title">رقم الهاتف</label>
                    <input type="text" name="j_tel" id="j_tel" class="form-control">
                </div>

                    <div class="form-group">
                            <label for="location">العنوان</label>
                            <input type="text" name="j_address" id="j_address" class="form-control">
                        </div>

                       
                            
                        <label for="location">الحالة</label>
                        <select class="form-control" id="j_avilability" name="j_avilability">
                            <option>متوفر</option>
                            <option>غير متوفر</option>
                            </select>
                            <hr>
              
                <div class="row">

                    <div class="form-group col-md-6">
                        <label for="location">وقت بدأ الدوام</label>
                        <input type="text" name="j_start_time" id="j_start_time" class="form-control">
                    </div>
                    
                    <div class="form-group col-md-6">
                        <label for="location">وقت انتهاء الدوام</label>
                        <input type="text" name="j_end_time" id="j_end_time" class="form-control">
                    </div>
                    
                </div>
               
                <div class="form-group">
                    <label for="location">اسم صاحب العمل</label>
                    <input type="text" name="j_owner" id="j_owner" class="form-control">
                </div>

                <div class="row">

                    <div class="col-md-6 ">
                        <label for="location">نوع الراتب</label>
                        <select class="form-control" id="jop_salary_type" name="jop_salary_type">
                            <option>شهري</option>
                            <option>اسبوعي</option>
                            <option>يومي</option>
                           
                          </select>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="location">مقدار الراتب</label>
                            <input type="text" name="j_salary" id="j_salary" class="form-control">
                        </div>
                    </div>
                </div>

               
                <div class="form-group">
                    <label for="location">شروط العمل</label>
                    <input type="text area" name="j_notes" id="j_notes" class="form-control">
                </div>




                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> أضافة</button>
                    </div>
            </form>
        </div>

        

    </div>
    
    
</div>

    
<%- include('../partials/footer') -%>