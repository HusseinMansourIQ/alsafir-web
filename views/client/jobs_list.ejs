<%- include('../partials/client_header') -%>
<%- include('../partials/client_navbar') -%>
<div class="container">
  
    <div class="row mt-3">
<div class="col md-12">
    <%- include('../partials/flashMessages') -%>
</div>      
    
    </div>

    
    


   
    <% chunk.forEach((jobs)=> {%>
        <div class="row mt-3">
    
       
            <% jobs.forEach((job)=> {%>
              <div class="col-sm-6 col-md-4">
                  <div class="card">
                      
                      <div class="card-body">
                        <h5 class="card-title text-end"><%= job.jop_name%></h5>
                        <p class="card-text text-end"><%= job.jop_addres%></p>
                        <p class="text-end"><%= job.jop_sallry%></p>
                        <a href="<%=  '/sendJobReq/'  + job.jop_id %>" class="btn btn-primary">ارسال طلب</a>
                      </div>
                    </div>
              </div>
              <%})%>
        </div>
    
      <%})%>



      <nav aria-label="Page navigation " class="mt-3 bottom">
        <ul class="pagination">
            <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
                <a class="page-link"  href="?<%=`page=${page-1}` %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% 
                const maxVisibleButtons = 5;
                const startPage = Math.max(1, page - Math.floor(maxVisibleButtons / 2));
                const endPage = Math.min(totalPages, startPage + maxVisibleButtons - 1);
                
            %>
            <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= page === i ? 'active' : '' %>">
                    <a class="page-link" href="?<%=`page=${page}` %>" aria-label="Next">
                        <%= i %></a>
                </li>

                
            <% } %>
            <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
                <a class="page-link"  href="?<%=`page=${page+1}` %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            
        </ul>
    </nav>

<%- include('../partials/footer') -%>